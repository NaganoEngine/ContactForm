//管理画面での地域選択カスタマイズ
function mk3_admin_script() {

global $post_type;
if( is_admin() && $post_type == "office" ){
wp_enqueue_script( 'mk3_admin_script', get_template_directory_uri().'/js/mk3_admin_area_checkbox.js', array('jquery'), '', true);
}


}
add_action("admin_print_scripts-post.php", "mk3_admin_script");


function Admin_Area_Changer_Recieve() {
if($_SERVER["REQUEST_METHOD"] === "POST"){
if( isset($_POST["Admin_Area_Changer_Action"]) ){

$area_term = $_POST["Area_Term"];
$con_result = Connect();

if($con_result[0]==="SUCCESS"){
$con_result[1]->beginTransaction();

$stmts1 = $con_result[1]->query(
"SELECT term_id FROM wp_term_taxonomy WHERE parent = '$area_term'"
);
$stmt1 = $stmts1->fetchAll();

$stmts2 = $con_result[1]->query(
"SELECT term_id FROM wp_term_taxonomy WHERE parent IN (SELECT term_id FROM wp_term_taxonomy WHERE parent = '$area_term')"
);
$stmt2 = $stmts2->fetchAll();

$stmts3 = $con_result[1]->query(
"SELECT term_id FROM wp_term_taxonomy WHERE parent IN (SELECT term_id FROM wp_term_taxonomy WHERE parent IN (SELECT term_id FROM wp_term_taxonomy WHERE parent = '$area_term'))"
);
$stmt3 = $stmts3->fetchAll();

$stmt = array_merge($stmt1,$stmt2,$stmt3);

if( !empty($stmt) ){
foreach($stmt as $key=> $val){

if( $key !== count($stmt)-1 ){
$val_str .= $val["term_id"]."," ;
}else{
$val_str .= $val["term_id"] ;
}

}
}

echo $val_str;
// var_dump($stmt);

$con_result[1]->commit();
}else{
echo "SQL_ERROR";
}

}else if( isset($_POST["Admin_Pref_Changer_Action"]) ){

$area_term = $_POST["Area_Term"];
$con_result = Connect();

if($con_result[0]==="SUCCESS"){
$con_result[1]->beginTransaction();

$stmts1 = $con_result[1]->query(
	"SELECT parent FROM wp_term_taxonomy WHERE term_id = '$area_term' "
);
$stmt1 = $stmts1->fetchAll();

$stmts2 = $con_result[1]->query(
"SELECT term_id FROM wp_term_taxonomy WHERE parent = '$area_term'"
);
$stmt2 = $stmts2->fetchAll();

$stmts3 = $con_result[1]->query(
"SELECT term_id FROM wp_term_taxonomy WHERE parent IN (SELECT term_id FROM wp_term_taxonomy WHERE parent = '$area_term')"
);
$stmt3 = $stmts3->fetchAll();


$stmt = array();
$stmt = array_merge( $stmt,$stmt1,$stmt2,$stmt3 ) ;

if( !empty($stmt) ){
foreach($stmt as $key=> $val){

if( $key !== count($stmt)-1 ){
$val_str .= $val[0]."," ;
}else{
$val_str .= $val[0] ;
}

}
}

echo $val_str;
// var_dump($stmt);

$con_result[1]->commit();
}else{
echo "SQL_ERROR";
}


}else if( isset($_POST["Admin_City_Changer_Action"]) ){

$area_term = $_POST["Area_Term"];

$con_result = Connect();

if($con_result[0]==="SUCCESS"){
$con_result[1]->beginTransaction();

##市町村選択 : 大エリア / 区選択 : 都道府県
$stmts1 = $con_result[1]->query(
"SELECT parent FROM wp_term_taxonomy WHERE term_id
IN (SELECT parent FROM wp_term_taxonomy WHERE term_id = '$area_term')"
);
$stmt1 = $stmts1->fetchAll();

##市町村選択 : NULL  / 区選択 : 大エリア
$stmts1_ku = $con_result[1]->query(
"SELECT parent FROM wp_term_taxonomy WHERE term_id
IN (SELECT parent FROM wp_term_taxonomy WHERE term_id
IN (SELECT parent FROM wp_term_taxonomy WHERE term_id = '$area_term'))"
);
$stmt1_ku = $stmts1_ku->fetchAll();

##市町村選択 : 都道府県  / 区選択 : 政令市
$stmts2 = $con_result[1]->query(
"SELECT parent FROM wp_term_taxonomy WHERE term_id = '$area_term'"
);
$stmt2 = $stmts2->fetchAll();//48


##市町村選択→親都道府県→親大エリア→子都道府県→子市町村全て  / 区選択 : NULL
$stmts4 = $con_result[1]->query(
"SELECT term_id FROM wp_term_taxonomy WHERE parent
IN (SELECT term_id FROM wp_term_taxonomy WHERE parent
IN (SELECT parent FROM wp_term_taxonomy WHERE term_id
IN (SELECT parent FROM wp_term_taxonomy WHERE term_id = '$area_term')))"
);
$stmt4 = $stmts4->fetchAll();

##区選択→親政令市選択→親都道府県→親大エリア→子都道府県→子市町村→区の全て  / 市町村選択 : NULL
$stmts5 = $con_result[1]->query(
"SELECT    term_id FROM wp_term_taxonomy WHERE parent
IN (SELECT term_id FROM wp_term_taxonomy WHERE parent
IN (SELECT term_id FROM wp_term_taxonomy WHERE parent
IN (SELECT parent  FROM wp_term_taxonomy WHERE term_id
IN (SELECT parent  FROM wp_term_taxonomy WHERE term_id = '$area_term'))))"
);
$stmt5 = $stmts5->fetchAll();

###選択
